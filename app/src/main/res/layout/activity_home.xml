<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#0441ff"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp"

        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/list_check"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Todo List"
        android:textColor="#fff"
        app:layout_constraintBaseline_toTopOf="parent"
        android:gravity="center_vertical"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="213dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#0441ff"
        android:drawableStart="@drawable/door"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:text="Tareas"
        android:textAlignment="center"
        android:textColor="#0441ff"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/style_inputs"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="Buscar tarea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/style_button"
        android:text="Buscar"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/searchText"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/style_button"
        android:text="+"
        android:textColor="#fff"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSearch"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view5"
        android:layout_width="354dp"
        android:layout_height="466dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="16dp"
        android:background="#81C3FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchText"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>